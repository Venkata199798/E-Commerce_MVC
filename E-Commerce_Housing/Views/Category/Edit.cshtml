@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label>Category Name</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input type="text" asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary form-control mt-3" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control mt-3" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.csthml" />
    }
}